# ===== Neo4j 数据库配置 =====
# 是否启用 Neo4j 图数据库（默认禁用，使用本地图数据库）
# 设置为 true 启用 Neo4j，false 禁用（推荐：false）
USE_NEO4J=false

# Neo4j 连接配置（仅当 USE_NEO4J=true 时使用）
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Django配置
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=*

# CORS配置
CORS_ALLOW_ALL_ORIGINS=True
